<Anarchy>
	
<!-- Increase Auger Damage to Blocks -->
<setattribute xpath="/items/item [@name='meleeToolPickT3Auger']/effect_group/passive_effect [@name='BlockDamage' and @operation='base_set']"
	name="value">80</setattribute>
	
<!-- Removes Crosshair on Guns but leaves them on bows excluding crossbow -->
<setattribute xpath="/items/item [starts-with(@name,'gunHandgun')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>
<setattribute xpath="/items/item [starts-with(@name,'gunShotgun')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>
<setattribute xpath="/items/item [starts-with(@name,'gunRifle')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>
<setattribute xpath="/items/item [starts-with(@name,'gunMG')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>
<setattribute xpath="/items/item [starts-with(@name,'gunExplosives')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>
<setattribute xpath="/items/item [contains(@name,'Crossbow')]/property [@name='CrosshairOnAim']"
	name="value">false</setattribute>

</Anarchy>